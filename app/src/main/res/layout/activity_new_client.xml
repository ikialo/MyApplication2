<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backmcs_beta"
    tools:context=".NewClientActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:layout_marginTop="180dp"
                android:gravity="center"
                android:id="@+id/newCLient"
                android:text="CREATE USER"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <EditText
                android:paddingLeft="20dp"
                android:hint="First Name"
                android:id="@+id/newFirstName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:paddingLeft="20dp"

                android:hint="Last Name"
                android:id="@+id/newLastName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:paddingLeft="20dp"

                android:hint="Phone Number"
                android:id="@+id/newPhoneNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <!--<EditText-->
            <!--android:paddingLeft="20dp"-->

            <!--android:hint="Default Payment"-->
            <!--android:id="@+id/paymentType"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content" />-->


            <TextView
                android:text="Gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <RadioGroup
                android:id="@+id/radioBut"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/cashId"
                    android:text="Male"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <RadioButton
                    android:id="@+id/postPaidId"
                    android:text="Female"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />


            </RadioGroup>

            <Button
                android:enabled="false"
                android:id="@+id/registerBtn"
                android:text="Register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


        </LinearLayout>


    </ScrollView>


</LinearLayout>